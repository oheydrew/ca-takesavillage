<%= form_with(model: profile, local: true, url: profile_path) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :avatar_data %><br/>
    <%= form.hidden_field :avatar, value: profile.cached_avatar_data %>
    <%= form.file_field  :avatar, id: :profile_avatar_data, class:'file_field_hide' %>
    <label for='profile_avatar_data'>Select a file</label>
  </div>

  <div>
    <%= form.text_field :first_name, id: :profile_first_name, placeholder: 'first_name' %>
  </div>

  <div>
    <%= form.text_field :last_name, id: :profile_last_name, placeholder: 'last_name' %>
  </div>

  <div>
    <%= form.text_area :bio, id: :profile_bio, placeholder: 'your biography' %>
  </div>

  <div>
    <%= form.text_field :tagline, id: :profile_tagline, placeholder: 'your short tagline' %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>