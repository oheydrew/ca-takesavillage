<h2>Welcome back! Sign In</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field inputfield">
    <span class="errors"><%= display_errors(resource, :email) %><br/></span>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
  </div>

  <div class="field inputfield">
    <span class="errors"><%= display_errors(resource, :password) %><br/></span>
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", required: true %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
