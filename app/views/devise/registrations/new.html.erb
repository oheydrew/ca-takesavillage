<h2>Start learning! Start Teaching!</h2>
<h4>It's easy to get started...</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <span class="errors"><%= display_errors(resource, :email) %><br/></span>
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <span class="errors"><%= display_errors(resource, :password) %><br/></span>
    <%= f.password_field :password, autocomplete: "off", required: true %>
  </div>

  <div class="field">
    <span class="errors"><%= display_errors(resource, :password_confirmation) %><br/></span>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
