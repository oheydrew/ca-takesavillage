<a href="<%= event_path(event) %>">
    <div class="card event-card">
        <% if event.image_display(:medium) %>
            
                <div class="square-image">
                    <%= image_tag event.image_display(:medium) %>
                </div> 

        <% end %>
        <h2><%= event.title %></h2> 
    </div>
</a>